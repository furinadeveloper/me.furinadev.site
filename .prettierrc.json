{
  "plugins": ["prettier-plugin-tailwindcss"],
  "arrowParens": "avoid",
  "printWidth": 80,
  "trailingComma": "all",
  "useTabs": false,
  "quoteProps": "preserve",
  "overrides": [
    {
      "files": [".vscode/*.json"],
      "options": {
        "parser": "jsonc",
        "quoteProps": "preserve",
        "singleQuote": false,
        "trailingComma": "all"
      }
    },
    {
      "files": ["*.md"],
      "options": {
        "printWidth": 80
      }
    }
  ]
}